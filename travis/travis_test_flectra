#!/bin/bash
echo "Creating a database with Base Module ---->"
sudo su - travis -c "source ~/virtualenv/python3.6/bin/activate && /home/travis/build/flectrahq/flectra/flectra-bin --addons-path=/home/travis/build/flectrahq/flectra/addons --stop-after-init -d base -i base --test-enable"
echo "Creating a database with All Modules ---->"
sudo su - travis -c "source ~/virtualenv/python3.6/bin/activate && /home/travis/build/flectrahq/flectra/flectra-bin --addons-path=/home/travis/build/flectrahq/flectra/addons --stop-after-init -d all -i 'all' --test-enable"
echo `pwd`
ls -alh
exit 0
